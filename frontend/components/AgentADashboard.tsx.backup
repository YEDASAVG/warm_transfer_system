                  <Badge variant="outline" className="ml-auto">
                    <Activity className="w-3 h-3 mr-1" />
                    Real-time
                  </Badge>
                </CardTitle>
              </CardHeader>
              <CardContent className="flex-1">
                <ScrollArea className="h-96 w-full">
                  <div className="space-y-4">
                    {transcript && transcript.trim() ? (
                      <div className="space-y-3">
                        {transcript.split('. ').map((sentence, index) => {
                          if (!sentence.trim()) return null;
                          
                          const isCustomer = sentence.toLowerCase().includes('customer:') || 
                                           sentence.toLowerCase().includes('caller:') ||
                                           sentence.toLowerCase().includes('user:');
                          
                          return (
                            <div key={index} className={`flex gap-3 ${isCustomer ? 'justify-start' : 'justify-end'}`}>
                              <div className={`max-w-xs lg:max-w-md p-3 rounded-lg ${
                                isCustomer 
                                  ? 'bg-muted text-foreground' 
                                  : 'bg-primary/10 text-foreground border border-primary/20'
                              }`}>
                                <div className="text-xs mb-1 text-muted-foreground">
                                  {isCustomer ? callerName : agentAName}
                                </div>
                                <div className="text-sm">
                                  {sentence.replace(/^(Customer:|Caller:|Agent:|User:)\s*/i, '').trim()}.
                                </div>
                              </div>
                            </div>
                          );
                        })}
                      </div>
                    ) : (
                      <div className="text-center py-12 text-muted-foreground">
                        <FileText className="w-12 h-12 mx-auto mb-4 opacity-50" />
                        <p className="text-lg mb-2">Live Audio/Video Call</p>
                        <p className="text-sm">
                          Communicate with the customer via audio and video. Speech recognition will automatically capture conversation.
                        </p>
                        
                        {/* Temporary testing button */}
                        <div className="mt-6">
                          <button 
                            onClick={() => {
                              const testTranscript = "Customer: Hi, I need help with my account login. Agent: I can help you with that. What seems to be the issue? Customer: I can't access my account after the password reset. Agent: Let me check your account status and help resolve this.";
                              updateCallState({ transcript: testTranscript });
                            }}
                            className="bg-blue-500 text-white px-4 py-2 rounded text-sm hover:bg-blue-600"
                          >
                            üìù Add Test Conversation (for transfer testing)
                          </button>
                        </div>
                        
                        <p className="text-xs mt-4 text-muted-foreground">
                          Enable microphone permissions for automatic speech-to-text transcription.
                        </p>
                      </div>
                    )}
                  </div>
                </ScrollArea>
              </CardContent>
            </Card>
          </div>
        </div>
      </div>

      {/* Transfer Summary Modal */}
      <TransferSummaryModal
        isOpen={showTransferModal}
        onClose={() => {
          console.log('üö™ Transfer modal closed');
