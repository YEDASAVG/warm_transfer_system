    console.log('üî• transcript length:', transcript.length);
    console.log('üî• transcript preview:', transcript.substring(0, 200));
    console.log('üî• onInitiateTransfer available:', !!onInitiateTransfer);
    
    let transferText = transcript.trim();
    
    // If no transcript, use a test conversation for demonstration
    if (!transferText) {
      console.log('‚ö†Ô∏è No transcript available, using test conversation');
      transferText = "Customer: Hi, I'm having trouble with my billing account. The payments aren't going through and I need help. Agent A: I can see there's an issue with your billing. This looks like a complex account problem that requires specialist help. Let me transfer you to our billing specialist who can access advanced account tools.";
      updateCallState({ transcript: transferText });
