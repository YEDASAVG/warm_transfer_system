        const result = await onInitiateTransfer(transferText);
        console.log('‚úÖ Transfer initiated successfully, result:', result);
        setShowTransferModal(true);
      } catch (error) {
        console.error('‚ùå Failed to initiate transfer:', error);
        updateCallState({ error: 'Failed to initiate transfer. Please try again.' });
      }
    } else {
      console.error('‚ùå onInitiateTransfer not available');
      updateCallState({ error: 'Transfer functionality not available.' });
    }
  };

    const handleInitiateTransfer = async () => {
    console.log('ÔøΩ handleInitiateTransfer called');
    console.log('üî• transcript length:', transcript.length);
    console.log('üî• transcript preview:', transcript.substring(0, 200));
    console.log('üî• onInitiateTransfer available:', !!onInitiateTransfer);
    
    if (!transcript.trim()) {
      console.log('‚ùå No transcript available');
      updateCallState({ error: 'No conversation transcript available for transfer. Please ensure there is an active conversation.' });
      return;
    }

    const transferText = transcript.trim();
    console.log('üìû Preparing to transfer with transcript:', transferText.substring(0, 100) + '...');

    if (onInitiateTransfer) {
      try {
        console.log('üìû Calling onInitiateTransfer with:', transferText.substring(0, 100) + '...');
        const result = await onInitiateTransfer(transferText);
        console.log('‚úÖ Transfer initiated successfully, result:', result);
        setShowTransferModal(true);
      } catch (error) {
        console.error('‚ùå Failed to initiate transfer:', error);
        updateCallState({ error: 'Failed to initiate transfer. Please try again.' });
      }
    } else {
      console.error('‚ùå onInitiateTransfer not available');
      updateCallState({ error: 'Transfer functionality not available.' });
    }
  };

  const handleConfirmTransfer = async (editedSummary: string) => {
    setShowTransferModal(false);
    
    if (onConfirmTransfer) {
      try {
        await onConfirmTransfer(editedSummary);
      } catch (error) {
        console.error('Failed to confirm transfer:', error);
        updateCallState({ error: 'Failed to confirm transfer. Please try again.' });
      }
    } else {
      updateCallState({ error: 'Transfer confirmation not available.' });
    }
  };

  return (
    <div className="min-h-screen bg-background">
      {/* Status Banner */}
      <StatusBanner transferStatus={transferStatus} userRole="agentA" />

      {/* Header */}
      <div className="bg-card border-b border-border px-4 py-4">
        <div className="max-w-7xl mx-auto flex items-center justify-between">
          <div className="flex items-center gap-3">
            <div className="w-8 h-8 bg-primary rounded-lg flex items-center justify-center">
              <Phone className="w-5 h-5 text-primary-foreground" />
            </div>
            <div>
              <h1 className="text-lg text-foreground">CallConnect Pro</h1>
              <p className="text-sm text-muted-foreground">Agent A Dashboard</p>
            </div>
          </div>
          <div className="flex items-center gap-4">
            <Badge variant="outline" className="bg-blue-50 dark:bg-blue-500/10 text-blue-700 dark:text-blue-400 border-blue-200 dark:border-blue-500/20">
              Agent A Active
            </Badge>
            <div className="text-sm text-muted-foreground">{agentAName}</div>
